<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="250dp"
    android:minWidth="250dp"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/doordialog_status"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/doordialog_helptext"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/vce_light_grey"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/doordialog_anim"
        android:layout_width="250dp"
        android:layout_height="150dp" >

        <ImageView
            android:id="@+id/doordialog_lock"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/lock" />

        <ImageView
            android:id="@+id/doordialog_phone"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:paddingLeft="85dp"
            android:rotation="20"
            android:scaleType="fitCenter"
            android:src="@drawable/android_phone" />
    </RelativeLayout>

</LinearLayout>