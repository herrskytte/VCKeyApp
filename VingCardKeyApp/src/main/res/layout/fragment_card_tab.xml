<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/card_action_header"
                style="@style/TextXSmallSilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Address" />
        <TextView
                android:id="@+id/card_action_detail"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="900 South Disneyland Drive Anaheim, California 92802" />
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/card_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonWhite"
                android:layout_alignParentRight="true"
                tools:text="View map"
                />
        <Button
                android:id="@+id/card_action_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonWhite"
                android:layout_alignParentLeft="true"
                android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>