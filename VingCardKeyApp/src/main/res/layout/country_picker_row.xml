<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/list_item_middle"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@android:color/white">

        <ImageView
                android:id="@+id/row_icon"
                android:layout_width="@dimen/img_icon_size"
                android:layout_height="@dimen/img_icon_size"
                android:layout_margin="@dimen/small_margin"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/flag_ad"
                android:scaleType="fitCenter" />

        <TextView
                android:id="@+id/row_title"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/row_icon"
                android:textIsSelectable="false"
                tools:text="Boznia and Herzegivaina States Islansds Fori"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/row_icon"
                android:background="@color/vce_light_grey" />
    </RelativeLayout>
</FrameLayout>